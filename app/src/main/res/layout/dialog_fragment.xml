<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/AppTheme"
    android:id="@+id/dfLL1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10sp"
    android:background="@color/md_theme_primaryFixed">

    <EditText
        android:id="@+id/etTaskName"
        android:layout_width="300sp"
        android:layout_height="48sp"
        android:ems="10"
        android:inputType="text"
        android:hint="@string/Task"
        android:layout_marginTop="10sp"/>

    <RadioGroup
        android:id="@+id/rbTagGroup"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" >

        <RadioButton
            android:id="@+id/rbWork"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/df_work" />

        <RadioButton
            android:id="@+id/rbPersonal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/df_personal" />

        <RadioButton
            android:id="@+id/rbFitness"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/df_fitness" />
    </RadioGroup>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10sp">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:text="@string/cancelar"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_weight="1"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_marginStart="0sp"/>

        <Button
            android:id="@+id/btnOk"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:text="@string/ok"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textSize="20sp"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_marginStart="0sp"/>

    </LinearLayout>

</LinearLayout>